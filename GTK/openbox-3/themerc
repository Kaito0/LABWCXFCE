# --- GNOME 47 Color Palette ---
# Modern Adwaita uses #f6f5f4 for Light and #241f31 for Dark (OSD)
window.active.title.bg.color: #FAFAFB
window.inactive.title.bg.color: #FAFAFB
window.active.label.text.color: #2e3436
window.inactive.label.text.color: #949697

# Window Border: GNOME 47 uses a very thin 1px inner stroke
# Instead of blue, use a subtle grey to match the flat GTK4 look
window.active.border.color: #d6d6d6
window.inactive.border.color: #dbdbdb
border.width: 1

# --- Button Geometry (GNOME 47 Spec) ---
# GNOME buttons are small icons inside 28px circular hit targets
window.button.width: 26.5
window.button.height: 26.5
window.button.spacing: 10
window.titlebar.padding.height: 5
window.titlebar.padding.width: 6

# --- Circular Hover Effect (Crucial for GNOME 47 look) ---
# To make buttons perfectly circular, radius must be exactly 50% of size
window.button.hover.bg.corner-radius: 14
window.active.button.hover.bg.color: #ebebeb
window.active.button.pressed.bg.color: #d6d6d6

# --- Icon Colors ---
window.active.button.unpressed.image.color: #2e3436
window.inactive.button.unpressed.image.color: #949697

# --- Close Button (GNOME Distinguishing Style) ---
# GNOME 47 Close button turns red only on hover
window.active.button.close.hover.bg.color: #f66151
window.active.button.close.hover.image.color: #ffffff

# --- Menu & OSD (Adwaita Popovers) ---
menu.items.bg.color: #ffffff
menu.items.text.color: #2e3436
menu.items.active.bg.color: #3584e4
menu.items.active.text.color: #ffffff

# OSD (Volume/Brightness) uses the Dark Adwaita palette
osd.bg.color: #241f31
osd.border.color: #000000
osd.label.text.color: #eeeeec

# --- Shadows ---
# Labwc supports real shadows which are key to the "elevation" in GNOME
window.active.shadow.size: 40
window.active.shadow.color: #00000040
window.inactive.shadow.size: 20
window.inactive.shadow.color: #00000025
